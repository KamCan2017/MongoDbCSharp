<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        xmlns:dviews="clr-namespace:Client.Developer.Views;assembly=Client.Developer"
        mc:Ignorable="d"
        Title="MongoDb App" Height="350" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0" Margin="10" SelectedItem="{Binding SelectedItem}">
            <ListBoxItem Content="Developer List"/>
            <ListBoxItem Content="Developer Editor">
            </ListBoxItem>
        </ListBox>

        <ContentControl Grid.Column="1" Margin="10" Content="{Binding ContentView, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            
        </ContentControl>
    </Grid>
</Window>
